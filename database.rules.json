{
  "rules": {
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "userChats": {
      ".read": "auth != null",
      "$uid": {
        ".write": "auth != null"
      }
    },
    "chatRooms": {
      ".read": "auth != null",
      ".write": "auth != null"
    }
  }
} 